<%- include("partials/header"); -%> 

<h1 class="compose-header">Compose</h1>

<form class="" action="/compose" method="POST">
   
        <div class="mb-3">
            <label for="titleInput" class="form-label">Title</label>
            <input 
                type="text" 
                title="Title" 
                name="postTitle" 
                class="form-control"
                autocomplete="off"
                autofocus="true">
        </div>

        <div class="form-group mb-3">
            <label for="postInput" class="form-label">Post</label>
            <textarea 
                class="form-control" 
                id="" 
                rows="10" 
                name="postBody"
                autocomplete="false"
                ></textarea>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Publish</button>
        </div>
   
</form>

<%- include("partials/footer"); -%> 